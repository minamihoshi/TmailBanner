<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.minami.lnx.tmailbanner.Main2Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        tools:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
        <LinearLayout
            android:id="@+id/lin_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            >



            <TextView
                android:id="@+id/tv_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="视频"
                android:gravity="center"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/tv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片"
                android:layout_margin="10dp"
                />


        </LinearLayout>






        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="aaa"
           android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rela_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:maxEms="5"
            android:text="53度茅台..."
            android:textSize="14sp"
            />


        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="14sp"
            android:layout_below="@id/tv_title"
            android:textColor="@android:color/holo_red_light"
            android:text="jfkajdkfjdlsjflksdjfkjdsalkfjldksjflkadsjflkajdsf"
            />


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:layout_below="@id/tv_detail"
            android:text="¥550"
            />





    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:text="请选择规格"
          android:layout_centerVertical="true"
          android:gravity="center"
          android:textSize="16sp"
          />

        <ImageView
            android:id="@+id/iv_guige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_launcher_round" />



    </RelativeLayout>


     <RelativeLayout
         android:layout_marginTop="20dp"
         android:background="@android:color/white"
         android:layout_width="match_parent"
         android:layout_height="100dp">

         <TextView
             android:id="@+id/tv_songzhi"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="10dp"
             android:text="送至：辽宁省-大连市-甘井子区"

             android:gravity="center"
             android:textSize="16sp"
             />

         <ImageView
             android:id="@+id/iv_songzhi"
             android:layout_width="wrap_content"
             android:layout_height="50dp"
             android:layout_alignParentEnd="true"
             android:layout_alignParentTop="true"
             android:src="@mipmap/ic_launcher_round" />

         <TextView
             android:id="@+id/tv_yunfei"
             android:layout_below="@id/tv_songzhi"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:text="运费 : 30"
             android:layout_margin="10dp"
            android:gravity="center_vertical"
             android:textSize="16sp"
             />
     </RelativeLayout>


</LinearLayout>
